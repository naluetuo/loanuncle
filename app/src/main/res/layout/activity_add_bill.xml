<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/tool_bar"/>

    <RelativeLayout
        android:id="@+id/borrow_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/login_toolbar"
        android:paddingTop="@dimen/qb_px_28"
        android:paddingBottom="@dimen/qb_px_28">

        <ImageView
            android:id="@+id/borrow_img"
            android:layout_width="@dimen/qb_px_26"
            android:layout_height="@dimen/qb_px_26"
            android:src="@mipmap/borrow"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/qb_px_37"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/borrow_channel"
            android:textColor="@color/login_button"
            android:textSize="@dimen/sp_12"
            android:layout_toRightOf="@+id/borrow_img"
            android:layout_marginLeft="@dimen/qb_px_28"/>

        <EditText
            android:id="@+id/platform_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:background="@null"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:maxLength="7"
            android:textSize="@dimen/sp_13"
            android:hint="@string/platform_name"
            android:layout_marginRight="@dimen/qb_px_34"/>

    </RelativeLayout>

    <View
        android:id="@+id/segmenting_line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_2"
        android:background="@color/strip_background"
        app:layout_constraintTop_toBottomOf="@+id/borrow_layout"
        android:layout_marginLeft="@dimen/qb_px_50"
        android:layout_marginRight="@dimen/qb_px_40"/>

    <RelativeLayout
        android:id="@+id/username_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/segmenting_line1"
        android:paddingTop="@dimen/qb_px_28"
        android:paddingBottom="@dimen/qb_px_28">

        <ImageView
            android:id="@+id/user_img"
            android:layout_width="@dimen/qb_px_26"
            android:layout_height="@dimen/qb_px_26"
            android:src="@mipmap/user"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/qb_px_37"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/user_name"
            android:textColor="@color/login_button"
            android:textSize="@dimen/sp_12"
            android:layout_toRightOf="@+id/user_img"
            android:layout_marginLeft="@dimen/qb_px_28"/>

        <EditText
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:gravity="end"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:maxLength="7"
            android:textSize="@dimen/sp_13"
            android:hint="@string/user_name_edt"
            android:layout_marginRight="@dimen/qb_px_34"/>

    </RelativeLayout>

    <View
        android:id="@+id/segmenting_line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_2"
        android:background="@color/strip_background"
        app:layout_constraintTop_toBottomOf="@+id/username_layout"
        android:layout_marginLeft="@dimen/qb_px_50"
        android:layout_marginRight="@dimen/qb_px_40"/>

    <RelativeLayout
        android:id="@+id/repay_date_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/segmenting_line2"
        android:paddingTop="@dimen/qb_px_28"
        android:paddingBottom="@dimen/qb_px_28">

        <ImageView
            android:id="@+id/repay_img"
            android:layout_width="@dimen/qb_px_26"
            android:layout_height="@dimen/qb_px_26"
            android:src="@mipmap/repaydate"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/qb_px_37"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/repay_date"
            android:textColor="@color/login_button"
            android:textSize="@dimen/sp_12"
            android:layout_toRightOf="@+id/repay_img"
            android:layout_marginLeft="@dimen/qb_px_28"/>

        <TextView
            android:id="@+id/repay_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/right_img1"
            android:layout_marginRight="@dimen/qb_px_20"
            android:text="@string/repay_date_example"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/login_button"/>

        <ImageView
            android:id="@+id/right_img1"
            android:layout_width="@dimen/qb_px_28"
            android:layout_height="@dimen/qb_px_40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/right_go"
            android:layout_marginRight="@dimen/qb_px_34"/>

    </RelativeLayout>

    <View
        android:id="@+id/segmenting_line3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_2"
        android:background="@color/strip_background"
        app:layout_constraintTop_toBottomOf="@+id/repay_date_layout"
        android:layout_marginLeft="@dimen/qb_px_50"
        android:layout_marginRight="@dimen/qb_px_40"/>

    <RelativeLayout
        android:id="@+id/monthly_supply_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/segmenting_line3"
        android:paddingTop="@dimen/qb_px_28"
        android:paddingBottom="@dimen/qb_px_28">

        <ImageView
            android:id="@+id/monthly_supply_img"
            android:layout_width="@dimen/qb_px_24"
            android:layout_height="@dimen/qb_px_24"
            android:src="@mipmap/monthsupply"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/qb_px_37"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/monthly_supply"
            android:textColor="@color/login_button"
            android:textSize="@dimen/sp_12"
            android:layout_toRightOf="@+id/monthly_supply_img"
            android:layout_marginLeft="@dimen/qb_px_28"/>

        <EditText
            android:id="@+id/monthly_supply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:gravity="end"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_13"
            android:singleLine="true"
            android:maxLength="7"
            android:inputType="number|numberDecimal"
            android:hint="@string/monthly_supply_edt"
            android:layout_marginRight="@dimen/qb_px_34"/>

    </RelativeLayout>

    <View
        android:id="@+id/segmenting_line4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_2"
        android:background="@color/strip_background"
        app:layout_constraintTop_toBottomOf="@+id/monthly_supply_layout"
        android:layout_marginLeft="@dimen/qb_px_50"
        android:layout_marginRight="@dimen/qb_px_40"/>

    <RelativeLayout
        android:id="@+id/allperiods_count_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/segmenting_line4"
        android:paddingTop="@dimen/qb_px_28"
        android:paddingBottom="@dimen/qb_px_28">

        <ImageView
            android:id="@+id/allperiods_count_img"
            android:layout_width="@dimen/qb_px_26"
            android:layout_height="@dimen/qb_px_26"
            android:src="@mipmap/allperiods"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/qb_px_37"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/allperiods_count"
            android:textColor="@color/login_button"
            android:textSize="@dimen/sp_12"
            android:layout_toRightOf="@+id/allperiods_count_img"
            android:layout_marginLeft="@dimen/qb_px_28"/>

        <TextView
            android:id="@+id/allperiods_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/right_img2"
            android:layout_marginRight="@dimen/qb_px_20"
            android:text="@string/allperiods_count_example"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/login_button"/>

        <ImageView
            android:id="@+id/right_img2"
            android:layout_width="@dimen/qb_px_28"
            android:layout_height="@dimen/qb_px_40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/right_go"
            android:layout_marginRight="@dimen/qb_px_34"/>

    </RelativeLayout>

    <View
        android:id="@+id/segmenting_line5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_2"
        android:background="@color/strip_background"
        app:layout_constraintTop_toBottomOf="@+id/allperiods_count_layout"
        android:layout_marginLeft="@dimen/qb_px_50"
        android:layout_marginRight="@dimen/qb_px_40"/>

    <RelativeLayout
        android:id="@+id/currentperiods_count_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/segmenting_line5"
        android:paddingTop="@dimen/qb_px_28"
        android:paddingBottom="@dimen/qb_px_28">

        <ImageView
            android:id="@+id/currentperiods_count_img"
            android:layout_width="@dimen/qb_px_26"
            android:layout_height="@dimen/qb_px_26"
            android:src="@mipmap/currentperiods"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/qb_px_37"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/currentperiods_count"
            android:textColor="@color/login_button"
            android:textSize="@dimen/sp_12"
            android:layout_toRightOf="@+id/currentperiods_count_img"
            android:layout_marginLeft="@dimen/qb_px_28"/>

        <TextView
            android:id="@+id/currentperiods_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/right_img3"
            android:layout_marginRight="@dimen/qb_px_20"
            android:text="@string/allperiods_count_example"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/login_button"/>

        <ImageView
            android:id="@+id/right_img3"
            android:layout_width="@dimen/qb_px_28"
            android:layout_height="@dimen/qb_px_40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/right_go"
            android:layout_marginRight="@dimen/qb_px_34"/>

    </RelativeLayout>

    <View
        android:id="@+id/segmenting_line6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_2"
        android:background="@color/strip_background"
        app:layout_constraintTop_toBottomOf="@+id/currentperiods_count_layout"
        android:layout_marginLeft="@dimen/qb_px_50"
        android:layout_marginRight="@dimen/qb_px_40"/>

    <TextView
        android:id="@+id/save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_login_cancle"
        android:paddingLeft="@dimen/qb_px_260"
        android:paddingRight="@dimen/qb_px_260"
        android:paddingTop="@dimen/qb_px_18"
        android:paddingBottom="@dimen/qb_px_18"
        app:layout_constraintTop_toBottomOf="@+id/segmenting_line6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/qb_px_40"
        android:text="@string/save"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/login_button"/>

</android.support.constraint.ConstraintLayout>