<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/tool_bar"/>

    <View
        android:id="@+id/segmenting_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_10"
        android:background="@color/strip_background"
        app:layout_constraintTop_toBottomOf="@+id/login_txt"
        android:layout_marginTop="@dimen/qb_px_20"/>

    <ImageView
        android:id="@+id/head_portrait"
        android:layout_width="@dimen/qb_px_150"
        android:layout_height="@dimen/qb_px_150"
        android:src="@mipmap/headportrait"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/qb_px_156"/>

    <TextView
        android:id="@+id/login_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_immediately"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/login_button"
        app:layout_constraintTop_toBottomOf="@+id/head_portrait"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/qb_px_21"/>

    <RelativeLayout
        android:id="@+id/information_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/segmenting_line"
        android:paddingTop="@dimen/qb_px_22"
        android:paddingBottom="@dimen/qb_px_22">

        <ImageView
            android:id="@+id/item_img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_personinformation"
            android:layout_marginLeft="@dimen/qb_px_60"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/person_information"
            android:textColor="@color/login_button"
            android:textSize="@dimen/sp_12"
            android:layout_toRightOf="@+id/item_img1"
            android:layout_marginLeft="@dimen/qb_px_10"/>

        <ImageView
            android:layout_width="@dimen/qb_px_22"
            android:layout_height="@dimen/qb_px_42"
            android:src="@mipmap/right_go"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/qb_px_50"/>

    </RelativeLayout>

    <View
        android:id="@+id/segmenting_line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_2"
        android:background="@color/strip_background"
        app:layout_constraintTop_toBottomOf="@+id/information_layout"
        android:layout_marginLeft="@dimen/qb_px_40"
        android:layout_marginRight="@dimen/qb_px_40"/>

    <RelativeLayout
        android:id="@+id/bill_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/segmenting_line1"
        android:paddingTop="@dimen/qb_px_22"
        android:paddingBottom="@dimen/qb_px_22">

        <ImageView
            android:id="@+id/item_img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_billcomplited"
            android:layout_marginLeft="@dimen/qb_px_60"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/bill_complited"
            android:textColor="@color/login_button"
            android:textSize="@dimen/sp_12"
            android:layout_toRightOf="@+id/item_img2"
            android:layout_marginLeft="@dimen/qb_px_10"/>

        <ImageView
            android:layout_width="@dimen/qb_px_22"
            android:layout_height="@dimen/qb_px_42"
            android:src="@mipmap/right_go"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/qb_px_50"/>

    </RelativeLayout>

    <View
        android:id="@+id/segmenting_line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_2"
        android:background="@color/strip_background"
        app:layout_constraintTop_toBottomOf="@+id/bill_layout"
        android:layout_marginLeft="@dimen/qb_px_40"
        android:layout_marginRight="@dimen/qb_px_40"/>

    <RelativeLayout
        android:id="@+id/public_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/segmenting_line2"
        android:paddingTop="@dimen/qb_px_22"
        android:paddingBottom="@dimen/qb_px_22">

        <ImageView
            android:id="@+id/item_img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_public"
            android:layout_marginLeft="@dimen/qb_px_60"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/public_number"
            android:textColor="@color/login_button"
            android:textSize="@dimen/sp_12"
            android:layout_toRightOf="@+id/item_img3"
            android:layout_marginLeft="@dimen/qb_px_10"/>

        <TextView
            android:id="@+id/public_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/number_background"
            android:textSize="@dimen/sp_12"
            android:text="@string/public_name"
            android:layout_marginRight="@dimen/qb_px_52"/>

    </RelativeLayout>

    <View
        android:id="@+id/segmenting_line3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_2"
        android:background="@color/strip_background"
        app:layout_constraintTop_toBottomOf="@+id/public_layout"
        android:layout_marginLeft="@dimen/qb_px_40"
        android:layout_marginRight="@dimen/qb_px_40"/>

    <RelativeLayout
        android:id="@+id/feedback_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/segmenting_line3"
        android:paddingTop="@dimen/qb_px_22"
        android:paddingBottom="@dimen/qb_px_22">

        <ImageView
            android:id="@+id/item_img4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_feedback"
            android:layout_marginLeft="@dimen/qb_px_60"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/feedback"
            android:textColor="@color/login_button"
            android:textSize="@dimen/sp_12"
            android:layout_toRightOf="@+id/item_img4"
            android:layout_marginLeft="@dimen/qb_px_10"/>

        <ImageView
            android:layout_width="@dimen/qb_px_22"
            android:layout_height="@dimen/qb_px_42"
            android:src="@mipmap/right_go"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/qb_px_50"/>

    </RelativeLayout>

    <View
        android:id="@+id/segmenting_line4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_2"
        android:background="@color/strip_background"
        app:layout_constraintTop_toBottomOf="@+id/feedback_layout"
        android:layout_marginLeft="@dimen/qb_px_40"
        android:layout_marginRight="@dimen/qb_px_40"/>

    <RelativeLayout
        android:id="@+id/help_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/segmenting_line4"
        android:paddingTop="@dimen/qb_px_22"
        android:paddingBottom="@dimen/qb_px_22">

        <ImageView
            android:id="@+id/item_img5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_help"
            android:layout_marginLeft="@dimen/qb_px_60"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/help"
            android:textColor="@color/login_button"
            android:textSize="@dimen/sp_12"
            android:layout_toRightOf="@+id/item_img5"
            android:layout_marginLeft="@dimen/qb_px_10"/>

        <ImageView
            android:layout_width="@dimen/qb_px_22"
            android:layout_height="@dimen/qb_px_42"
            android:src="@mipmap/right_go"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/qb_px_50"/>

    </RelativeLayout>

    <View
        android:id="@+id/segmenting_line5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_2"
        android:background="@color/strip_background"
        app:layout_constraintTop_toBottomOf="@+id/help_layout"
        android:layout_marginLeft="@dimen/qb_px_40"
        android:layout_marginRight="@dimen/qb_px_40"/>

    <RelativeLayout
        android:id="@+id/about_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/segmenting_line5"
        android:paddingTop="@dimen/qb_px_22"
        android:paddingBottom="@dimen/qb_px_22">

        <ImageView
            android:id="@+id/item_img6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_about"
            android:layout_marginLeft="@dimen/qb_px_60"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/about"
            android:textColor="@color/login_button"
            android:textSize="@dimen/sp_12"
            android:layout_toRightOf="@+id/item_img6"
            android:layout_marginLeft="@dimen/qb_px_10"/>

        <TextView
            android:id="@+id/about_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/number_background"
            android:textSize="@dimen/sp_12"
            android:text="1.0.0"
            android:layout_marginRight="@dimen/qb_px_52"/>

    </RelativeLayout>

    <View
        android:id="@+id/segmenting_line6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_2"
        android:background="@color/strip_background"
        app:layout_constraintTop_toBottomOf="@+id/about_layout"
        android:layout_marginLeft="@dimen/qb_px_40"
        android:layout_marginRight="@dimen/qb_px_40"/>


</android.support.constraint.ConstraintLayout>