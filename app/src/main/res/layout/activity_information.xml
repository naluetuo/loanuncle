<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/information_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/tool_bar"/>

    <RelativeLayout
        android:id="@+id/phonenumber_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/login_toolbar"
        android:paddingTop="@dimen/qb_px_44"
        android:paddingBottom="@dimen/qb_px_44">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/phone_number"
            android:textColor="@color/login_button"
            android:textSize="@dimen/sp_13"
            android:layout_marginLeft="@dimen/qb_px_60"/>

        <TextView
            android:id="@+id/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/number_background"
            android:textSize="@dimen/sp_12"
            android:text=""
            android:layout_marginRight="@dimen/qb_px_52"/>

    </RelativeLayout>

    <View
        android:id="@+id/segmenting_line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_2"
        android:background="@color/strip_background"
        app:layout_constraintTop_toBottomOf="@+id/phonenumber_layout"
        android:layout_marginLeft="@dimen/qb_px_40"
        android:layout_marginRight="@dimen/qb_px_40"/>

    <RelativeLayout
        android:id="@+id/name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/segmenting_line1"
        android:paddingTop="@dimen/qb_px_44"
        android:paddingBottom="@dimen/qb_px_44">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/name"
            android:textColor="@color/login_button"
            android:textSize="@dimen/sp_13"
            android:layout_marginLeft="@dimen/qb_px_60"/>

        <TextView
            android:id="@+id/name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/number_background"
            android:textSize="@dimen/sp_12"
            android:text=""
            android:layout_toLeftOf="@+id/go_img"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/qb_px_12"/>

        <ImageView
            android:id="@+id/go_img"
            android:layout_width="@dimen/qb_px_22"
            android:layout_height="@dimen/qb_px_42"
            android:src="@mipmap/right_go"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/qb_px_50"/>

    </RelativeLayout>

    <View
        android:id="@+id/segmenting_line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_2"
        android:background="@color/strip_background"
        app:layout_constraintTop_toBottomOf="@+id/name_layout"
        android:layout_marginLeft="@dimen/qb_px_40"
        android:layout_marginRight="@dimen/qb_px_40"/>

    <RelativeLayout
        android:id="@+id/gender_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/segmenting_line2"
        android:paddingTop="@dimen/qb_px_44"
        android:paddingBottom="@dimen/qb_px_44">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/gender"
            android:textColor="@color/login_button"
            android:textSize="@dimen/sp_13"
            android:layout_marginLeft="@dimen/qb_px_60"/>

        <TextView
            android:id="@+id/gender_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/number_background"
            android:textSize="@dimen/sp_12"
            android:text=""
            android:layout_toLeftOf="@+id/go_img2"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/qb_px_12"/>

        <ImageView
            android:id="@+id/go_img2"
            android:layout_width="@dimen/qb_px_22"
            android:layout_height="@dimen/qb_px_42"
            android:src="@mipmap/right_go"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/qb_px_50"/>

    </RelativeLayout>

    <View
        android:id="@+id/segmenting_line3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_2"
        android:background="@color/strip_background"
        app:layout_constraintTop_toBottomOf="@+id/gender_layout"
        android:layout_marginLeft="@dimen/qb_px_40"
        android:layout_marginRight="@dimen/qb_px_40"/>

    <RelativeLayout
        android:id="@+id/birthday_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/segmenting_line3"
        android:paddingTop="@dimen/qb_px_44"
        android:paddingBottom="@dimen/qb_px_44">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/birthday"
            android:textColor="@color/login_button"
            android:textSize="@dimen/sp_13"
            android:layout_marginLeft="@dimen/qb_px_60"/>

        <TextView
            android:id="@+id/birthday_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/number_background"
            android:textSize="@dimen/sp_12"
            android:text=""
            android:layout_toLeftOf="@+id/go_img3"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/qb_px_12"/>

        <ImageView
            android:id="@+id/go_img3"
            android:layout_width="@dimen/qb_px_22"
            android:layout_height="@dimen/qb_px_42"
            android:src="@mipmap/right_go"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/qb_px_50"/>

    </RelativeLayout>

    <View
        android:id="@+id/segmenting_line4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_2"
        android:background="@color/strip_background"
        app:layout_constraintTop_toBottomOf="@+id/birthday_layout"
        android:layout_marginLeft="@dimen/qb_px_40"
        android:layout_marginRight="@dimen/qb_px_40"/>

    <TextView
        android:id="@+id/login_cancle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_cancle"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/login_button"
        android:background="@drawable/round_login_cancle"
        android:paddingLeft="@dimen/qb_px_50"
        android:paddingRight="@dimen/qb_px_50"
        android:paddingTop="@dimen/qb_px_22"
        android:paddingBottom="@dimen/qb_px_22"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/segmenting_line4"
        android:layout_marginTop="@dimen/qb_px_60"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/picker_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/half_transparent">

        <View
            android:id="@+id/empty_layout1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/date_layout"/>

        <LinearLayout
            android:id="@+id/date_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/round_dialog"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="生日"
                android:textSize="@dimen/sp_16"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>

            <com.loanuncle.gm.juke.view.PickTimeView
                android:id="@+id/picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/qb_px_40"
                android:layout_marginBottom="@dimen/qb_px_50">

                <TextView
                    android:id="@+id/datecancle_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cancle"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/login_button"
                    android:background="@drawable/round_cancle"
                    android:singleLine="true"
                    android:paddingLeft="@dimen/qb_px_40"
                    android:paddingRight="@dimen/qb_px_40"
                    android:paddingTop="@dimen/qb_px_10"
                    android:paddingBottom="@dimen/qb_px_10"
                    android:layout_marginRight="@dimen/qb_px_90"/>

                <TextView
                    android:id="@+id/datesure_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sure"
                    android:textSize="@dimen/sp_13"
                    android:paddingLeft="@dimen/qb_px_40"
                    android:paddingRight="@dimen/qb_px_40"
                    android:paddingTop="@dimen/qb_px_10"
                    android:paddingBottom="@dimen/qb_px_10"
                    android:singleLine="true"
                    android:textColor="@color/login_button"
                    android:background="@drawable/round_sure"
                    android:layout_toRightOf="@+id/datecancle_btn"/>

            </RelativeLayout>

        </LinearLayout>

        <View
            android:id="@+id/empty_layout2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date_layout"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>